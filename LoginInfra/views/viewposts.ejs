<%if (typeof result != 'undefined'){%>
 	<%if (result == 'success'){%>
  			<script>
  			$( document ).ready(function() {
    			$("#posthidden").removeClass("hidden");
			});
			</script>
 	<%}%>
 	<%if (result == '2'){%>
 			<script>
  			$( document ).ready(function() {
    			$("#signedup").removeClass("hidden");
			});
			</script>
 	<%}%>
 	<%if (result == '3'){%>
 			<script>
  			$( document ).ready(function() {
    			$("#invalid").removeClass("hidden");
			});
			</script>
 	<%}%>
