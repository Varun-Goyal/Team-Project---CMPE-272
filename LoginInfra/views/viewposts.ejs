<body ng-app="userposts" ng-controller="userpostsController">

<div class="bg">

<div class="main">

	<!-- HEADER -->
	<div class="header box custom">

		<p class="logo" style="top:0px;"><a href="./" title="CompanyName [Go to homepage]"><img src="design/TransparentLogo2.png" style="width:180px;height:130px;" alt="" /></a></p>
		
		<!-- NAVIGATION -->
		<ul class="nav box">
			<li class="current"><a href="/">Home</a></li>
			<li><a href="/makepost">Post</a></li>
			<li><a href="/logout">Logout</a></li>
		</ul>

	</div> <!-- /header -->
	
	<!-- SLOGAN -->
	<div class="slogan custom">
		<br><br>
		<h2>Issues submitted by 
		other users</h2>
		
	</div> <!-- /slogan -->

	<!-- SECTION -->
	<div class="section box" style="margin-top:0px; box-shadow: 2px 5px 5px #888888;">

		
		<!-- CONTENT -->
		<div class="content box" >
		   <h4 class="message hidden" id="posthidden" style="margin-top:75px;">Your post has been uploaded and will be visible here once it has been approved by the admin</h4><br/>
			
			<!-- HEADINGS -->
			
			<div ng-repeat="Post in Posts">
			<!-- Repeat -->
			<hr class="style-one"><br/>
			<div class="box" style="margin-top:20px; box-shadow: 10px 10px 5px #888888;">
				<div class="container">
					
					<!--Image-->
					<div class="row">
						<div class="col-md-8">							
							<b>Infrastructure:</b> {{Post.NAME}}<br/>
							<b>Description:</b> {{Post.DESCRIPTION}}<br/><br/>
							<div class="row" style=" padding-left:5%;">
								<img id="blah" ng-src="{{Post.IMAGEFILE}}" alt="" class="f-left" style="width:700px; height:400px; border:1px solid;"/>
							</div>
							<br/><span width:700px;>@ {{Post.ADDRESS}},{{Post.STATE}} - {{Post.ZIPCODE}},{{Post.COUNTRY}}</span>
							<div class="wrap">
  								<div class="votes" style="color:white !important; border-color:black !important; background-color:black !important;">{{Post.upvotes.count}}</div>
  								<div class="button" ng-click="upvote($index);" style="color:white !important; border-color:black !important; background-color:grey !important;"><i class="fa fa-arrow-up"></i>Vote this up now</div>
							</div>
						</div>
					</div>
					<div class="row">
								<div class="comment_block">
						
									<!-- used by #{user} to create a new comment -->
									 <div class="create_new_comment">
							
										<!-- current #{user} avatar -->
									 	<div class="user_avatar">
									 		<img ng-src="http://img2.wikia.nocookie.net/__cb20130607025329/creepypasta/images/3/38/Avatar-blank.jpg">
									 	</div><!-- the input field --><div class="input_comment">
									 	
											<div class="input-group">
									 			<input type="text" ng-model="Post.AddComment" name="txt_comment" placeholder="Join the conversation.." aria-describedby="basic-addon2">
									 			<span class="input-group-addon black-addon" ng-click="postcomment($index,Post.AddComment);">Post comment</span>
											</div>
									 	</div>
							
									 </div>
									<!-- used by #{user} to create a new comment -->
						
								 <!-- Ng-epeat for comments-->
								 <div class="new_comment" ng-repeat="comment in Post.COMMENTS">
						
									<!-- build comment -->
								 	<ul class="user_comment">
										<li>
								 		<!-- current #{user} avatar -->
									 	<div class="user_avatar">
									 		<img src="http://img2.wikia.nocookie.net/__cb20130607025329/creepypasta/images/3/38/Avatar-blank.jpg">
									 	</div><!-- the comment body --><div class="comment_body">
									 		<p>{{comment.TEXT}}</p>
									 	</div>
						
									 	<!-- comments toolbar -->
									 	<div class="comment_toolbar">
						
									 		<!-- inc. date and time -->
									 		<div class="comment_details">
									 			<ul>
									 				<li><i class="fa fa-clock-o"></i> 13:94</li>
									 				<li><i class="fa fa-calendar"></i> 04/01/2015</li>
									 				<li><i class="fa fa-pencil"></i> <span class="user">{{comment.FNAME}}&nbsp;	{{comment.LNAME}}</span></li>
									 			</ul>
									 		</div>
						
									 	</div>
									</li>
									</ul>
						
								 </div>
								 <!-- Ng-epeat for comments-->
								 
						   </div>
						
						
					</div>
					<!--Image-->
					
					
					
				</div>
			</div>
			<br><br>			
			<!-- Repeat -->
			</div>
			
			
		
			
	   
		</div> <!-- /content -->

	</div> <!-- /section -->		

	<!-- FOOTER -->
	<div class="footer box">

		<p class="f-right t-right">
			InfraLift Inc.<br />
			<a href="#">www.InfraLift.com</a><br />
			<a href="#">InfraLift@gmail.com</a><br />
			Address: San Jose<br />
			Phone: (###) ###-####
		</p>
	
		<p class="f-left">
			Copyright &copy;&nbsp;2015 <a href="/">InfraLift Inc</a><br />
		</p>

	</div> <!-- /footer -->

</div> <!-- /main -->

</div> <!-- /bg -->

<script type="text/javascript"> Cufon.now(); </script>

</body>
